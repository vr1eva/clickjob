generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          Int      @id @default(autoincrement())
  username    String
  email       String
  password    String?
  createdAt   DateTime @default(now())
  jobAds      JobAd[]
}

model JobAd {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  location    String
  postedBy    User      @relation(fields: [postedById], references: [id])
  postedById  Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}